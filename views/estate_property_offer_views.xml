<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="estate_property_offer_view_form" model="ir.ui.view">
            <field name="name">estate.property.offer.view.form</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form string="Property Offer">
                    <sheet>
                        <group>
                            <field name="price" />
                            <field name="partner_id" />
                            <field name="validity" />
                            <field name="date_deadline" />
                            <field name="state" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="estate_property_offer_view_tree" model="ir.ui.view">
            <field name="name">estate.property.offer.view.tree</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <tree string="Property Offers">
                    <field name="price" />
                    <field name="partner_id" />
                    <field name="validity" />
                    <field name="date_deadline" />
                    <button name="action_accept" type="object" icon="fa-check" help="Accept offer" />
                    <button name="action_refuse" type="object" icon="fa-times" help="Refuse offer" />
                    <field name="state" />
                </tree>
            </field>
        </record>

    </data>

</odoo>
